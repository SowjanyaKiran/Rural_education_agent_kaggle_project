from summarizer import LLMSummarizer
from ingest_curator import read_resource_manifest
from pprint import pprint

df = read_resource_manifest('../data/sample_resources.csv')
ss = LLMSummarizer(provider='mock')

summaries = {}
for _, row in df.iterrows():
    # In a real project you'd fetch resource text; here we synthesize example text
    content_example = f"{row['title']}. This is example content for resource {row['id']}. It includes explanations, examples and practice steps suitable for learners."
    summary = ss.summarize(content_example, mode='short')
    summaries[row['id']] = summary

print('Generated summaries (id -> summary):')
pprint(summaries)
