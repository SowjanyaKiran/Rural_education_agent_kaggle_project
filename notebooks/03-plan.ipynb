from planner import StudentProfile, plan_weekly_lessons
from ingest_curator import read_resource_manifest
from summarizer import LLMSummarizer

# Load resources and create short summaries (mock)
resources = read_resource_manifest('../data/sample_resources.csv').to_dict(orient='records')
ss = LLMSummarizer(provider='mock')
summaries = {r['id']: ss.summarize(r['title'] + '. Example content', mode='short') for r in resources}

# Example student with a bandwidth budget (KB per week)
student = StudentProfile(
    id='s1',
    name='Raju',
    grade=6,
    preferred_language='kn',   # Kannada preference (demo)
    weekly_bandwidth_kb=500,   # budget in KB
    available_hours_per_day=1.0
)

plan = plan_weekly_lessons(student, resources, summaries)
print('Weekly plan for', student.name)
for l in plan:
    print(f"Day {l.day}: {l.title} ({l.estimated_kb} KB) â€” summary: {l.summary}")
