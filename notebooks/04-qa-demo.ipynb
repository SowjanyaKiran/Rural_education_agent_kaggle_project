from multi_agent import RetrieverAgent, QAAgent, Orchestrator
from ingest_curator import read_resource_manifest
from summarizer import LLMSummarizer

# Prepare corpus: resource_id -> summary/text
resources = read_resource_manifest('../data/sample_resources.csv').to_dict(orient='records')
ss = LLMSummarizer(provider='mock')
corpus = {r['id']: ss.summarize(r['title'] + '. Example content', mode='short') for r in resources}

# Initialize agents & orchestrator
retriever = RetrieverAgent(corpus)
qa_agent = QAAgent()
orch = Orchestrator(retriever, qa_agent)

# Example queries to test retrieval + QA
queries = [
    "addition",
    "fractions",
    "kannada alphabets",
    "plants"
]

for q in queries:
    print('='*60)
    print('Query:', q)
    resp = orch.handle_query(q)
    print('Answer:')
    print(resp['answer'])
    print('Contexts returned:')
    for c in resp['contexts']:
        print('-', c['id'], 'score=', c.get('score'))
